@page
@using BoardGameVoter.Models.TableModels
@model IndexModel
@{
    ViewData["Title"] = "My Library";
}
<form id="Library">
    <h1>@ViewData["Title"]</h1>
    <div class="form-group">
        <a id="Add" class="btn btn-primary">Add New</a>
    </div>
    <table id="userLibraryDatatable" class="table table-striped table-bordered dt-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Publisher</th>
                <th>Players</th>
                <th>Playtime</th>
                <th>Available</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (UserLibraryTableModel _TableModel in Model.UserLibrary)
                {
                    <tr>
                        <td>@_TableModel.ID</td>
                        <td>@_TableModel.Title</td>
                        <td>@_TableModel.Description</td>
                        <td>@_TableModel.Publisher</td>
                        <td>@_TableModel.Players</td>
                        <td>@_TableModel.Playtime</td>
                        @if(_TableModel.IsAvailable){
                            <td>
                                <div class='table__icon-container'>
                                    <img class='table__icon--positive' src='/lib/bootstrap/icons/check-circle.svg' />
                                </div>
                            </td>
                        }
                        else
                        {
                            <td>
                                <div class='table__icon-container'>
                                    <img class='table__icon--negative' src='/lib/bootstrap/icons/x-circle.svg' alt='Bootstrap' />
                                </div>
                            </td>
                        }
                        <td><a href="/Library/Update/@_TableModel.UID" class="btn btn-primary">Update</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</form>

@section Scripts{
    <script src="~/js/Library/Index.js" asp-append-version="true"></script>
}
