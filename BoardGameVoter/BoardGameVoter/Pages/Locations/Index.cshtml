@page
@using BoardGameVoter.Models.EntityModels
@model IndexModel
@{
    ViewData["Title"] = "Locations";
}
<form id="Locations">
    <h1>@ViewData["Title"]</h1>
    <div class="form-group">
        <a id="Add" class="btn btn-primary">Add New</a>
    </div>
    <table id="locationsDatatable" class="table table-striped table-bordered dt-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Postcode</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Location _Location in Model.Locations)
                {
                    <tr>
                        <td>@_Location.ID</td>
                        <td>@_Location.Name</td>
                        <td>@_Location.Address</td>
                        <td>@_Location.Postcode</td>
                        <td>£@_Location.Cost</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</form>
@section Scripts{
    <script src="~/js/Locations/Index.js" asp-append-version="true"></script>
}
