@page
@using BoardGameVoter.Models.TableModels
@model BoardGameVoter.Pages.Friends.IndexModel
@{
    ViewData["Title"] = "My Friends";
}
<form id="Friends">
    <h1>@ViewData["Title"]</h1>
    <div class="form-group">
        <a href="/friends/search" class="btn btn-primary">Add New</a>
    </div>
    <table id="friendsDatatable" class="table table-striped table-bordered dt-responsive">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Total Games</th>
                <th>Online</th>
                @*
                    IDEAS:
                    /Message
                    /See collection
                *@
            </tr>
        </thead>
        <tbody>
            @{
                foreach (FriendsTableModel _TableModel in Model.Friends)
                {
                    <tr>
                        <td>@_TableModel.Username</td>
                        <td>@_TableModel.FirstName</td>
                        <td>@_TableModel.LastName</td>
                        <td>@_TableModel.TotalGames</td>
                        @if (_TableModel.Online)
                        {
                            <td>
                                <div class='table__icon-container'>
                                    <img class='table__icon--positive' src='/lib/bootstrap/icons/check-circle.svg' />
                                </div>
                            </td>
                        }
                        else
                        {
                            <td>
                                <div class='table__icon-container'>
                                    <img class='table__icon--negative' src='/lib/bootstrap/icons/x-circle.svg' alt='Bootstrap' />
                                </div>
                            </td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</form>